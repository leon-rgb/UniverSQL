<Window x:Class="UniverSQL.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniverSQL.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Load Data" Width="100" Height="30"
                HorizontalAlignment="Left" Margin="20,10,0,0"
                VerticalAlignment="Top" Click="LoadData_Click"/>

        <DataGrid x:Name="ResultsGrid" Margin="20,50,20,20" AutoGenerateColumns="True"/>
    </Grid>
</Window>
